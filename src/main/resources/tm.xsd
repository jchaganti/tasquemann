<?xml version="1.0" encoding="UTF-8"?>

<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema"
	xmlns:tm="http://www.example.org/tm.xsd" targetNamespace="http://www.example.org/tm.xsd"
	elementFormDefault="qualified">

	<xsd:complexType name="TMProjectType">
		<xsd:sequence>
			<xsd:element name="title" type="xsd:string"></xsd:element>
			<xsd:element name="description" type="xsd:string"></xsd:element>
		</xsd:sequence>
		<xsd:attribute name="id" type="xsd:int"></xsd:attribute>
	</xsd:complexType>

	<xsd:complexType name="TMTaskType">
		<xsd:sequence>
			<xsd:element name="description" type="xsd:string"></xsd:element>
			<xsd:element name="estimatedHrs" type="xsd:float"></xsd:element>
			<xsd:element name="actualHrs" type="xsd:float"></xsd:element>
			<xsd:element name="todoHrs" type="xsd:float"></xsd:element>
			<xsd:element name="startDate" type="xsd:dateTime"></xsd:element>
			<xsd:element name="endDate" type="xsd:dateTime"></xsd:element>
			<xsd:element name="dirty" type="xsd:boolean"></xsd:element>
			<xsd:element name="level" type="xsd:int"></xsd:element>
			<xsd:element name="subTasks" type="tm:TMTasksType"></xsd:element>
		</xsd:sequence>
		<xsd:attribute name="id" type="xsd:int"></xsd:attribute>
	</xsd:complexType>

	<xsd:complexType name="TMTasksType">
		<xsd:sequence>
			<xsd:element name="task" type="tm:TMTaskType" minOccurs="0" maxOccurs="unbounded" />
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="TMProjectsType">
		<xsd:sequence>
			<xsd:element name="tmProject" type="tm:TMProjectType" minOccurs="0" maxOccurs="unbounded"></xsd:element>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="TMCalendarType">
		<xsd:sequence>
			<xsd:element name="name" type="xsd:string"></xsd:element>
			<xsd:element name="usedStatus" type="xsd:boolean"></xsd:element>
			<xsd:element name="overrideWkgDays" type="xsd:string"></xsd:element>
			<xsd:element name="overrideHoliDays" type="xsd:string"></xsd:element>
			<xsd:element name="wkDays" type="xsd:int"></xsd:element>
			<xsd:element name="holiDays" type="xsd:int"></xsd:element>
			<xsd:element name="wkgDayHrs" type="xsd:float"></xsd:element>
			<xsd:element name="holiDayHrs" type="xsd:float"></xsd:element>
		</xsd:sequence>
		<xsd:attribute name="id" type="xsd:int"></xsd:attribute>
	</xsd:complexType>
	
	<xsd:complexType name="TMCalendarsType">
        <xsd:sequence>
            <xsd:element name="tmCalendarType" type="tm:TMCalendarType" minOccurs="0" maxOccurs="unbounded"></xsd:element>
        </xsd:sequence>
    </xsd:complexType>

	<xsd:element name="tmCalendars" type="tm:TMCalendarsType"></xsd:element>

	<xsd:element name="tmProjects" type="tm:TMProjectsType"></xsd:element>

	<xsd:element name="tmTasks" type="tm:TMTasksType"></xsd:element>
</xsd:schema>